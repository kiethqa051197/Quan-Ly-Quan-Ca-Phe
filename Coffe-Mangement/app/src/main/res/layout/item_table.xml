<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemtable"
    android:layout_margin="@dimen/size5dp">

    <ImageView
        android:id="@+id/imgTable"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:src="@drawable/table"
        android:layout_below="@+id/txtNameTable" />

    <TextView
        android:id="@+id/txtNameTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size10dp"
        android:textColor="@android:color/black"
        android:text="@string/banan"/>

    <ImageView
        android:id="@+id/imgOrder"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:src="@drawable/goimon"
        android:layout_below="@+id/imgTable"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imgPayment"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imgTable"
        android:layout_margin="@dimen/size5dp"
        android:layout_toEndOf="@+id/imgOrder"
        android:src="@drawable/thanhtoan"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgHideButton"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:src="@drawable/anbutton"
        android:layout_below="@+id/imgTable"
        android:layout_toEndOf="@+id/imgPayment"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"/>
</RelativeLayout>